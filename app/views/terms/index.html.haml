.hero-jumbotron
  .container
    %h1= t(".title")
    %p= t(".subtitle")

= form_for @newsletter_subscription, url: create_newsletter_subscription_terms_path,
  html: { class: "form-horizontal" } do |f|
  .container
    %h1.page-header Trimestres

    = render "shared/google_adsense"
    = render "shared/flash_messages"

    %p
      = link_to "#newsletter-subscription-collapse", data: { toggle: "collapse" } do
        %i.fa.fa-bell-o
        = t(".newsletter_subscription_message")

  .collapse#newsletter-subscription-collapse{ class: ("in" if f.object.errors.present?) }
    .well
      .container
        .form-group{ class: ("has-error" if f.object.errors.key?(:email)) }
          = f.label :email, class: "col-sm-1 control-label"
          .col-sm-11
            = f.text_field :email, class: "form-control"
            - f.object.errors[:email].each do |error|
              .help-block= error

        = f.submit class: "col-xs-12 col-sm-4 pull-right btn btn-primary btn-sm"

  .container
    - @terms.to_a.group_by(&:year).each_slice(3) do |terms_slice|
      .row
        - terms_slice.each do |year, terms|
          .col-sm-4
            .panel.panel-default
              .panel-heading= year

              .list-group
              - terms.each do |term|
                = link_to term.name, new_term_agenda_path(term), class: "list-group-item"
